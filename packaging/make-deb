#set -o errexit
#set -o nounset
#set -o pipefail
#set -o xtrace


#---------
# HEADER
#---------
__script_name__="make-deb"

package_architecture='all'


#---------------
# MAIN ROUTINE
#---------------

source ../tip-notes/project-header.sh
source ../tip-notes/comprename-lib.sh


destination_folder="${1}"



if [[ "${#}" -eq 0 ]]; then
    echo "ERROR: destination folder missing!"
    echo
    echo 'usage:'
    echo "${__script_name__} <destination folder>"
    echo
    exit 1
fi

if ! [[ -d "${destination_folder}" ]]; then
    echo "ERROR: destination folder does not exist!"
    exit 1
fi


# 1. create package folder named according to conventions
source ./make-deb-create-pack-folder


# 2. add elements to package folder as required.
#    Uncomment optional elements to activate
source ./make-deb-control-files
source ./make-deb-exec
source ./make-deb-autocompletion
source ./make-deb-doc
source ./make-deb-man


# 3. build the deb file from package folder
cd "${destination_folder}"
dpkg-deb --build "${package_folder}"
