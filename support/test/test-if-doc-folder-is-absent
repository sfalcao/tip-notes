set -o errexit
#set -o nounset
set -o pipefail
#set -o xtrace

source ../../tip-notes/project-header.sh


#---------
# HEADER
#---------
__script_name__="${0}"


# check if doc folder exists
if [[ ! -d "${HEADER___PROJECT_DOC_FOLDER}" ]]; then
    exit 0
fi

echo \
    "[${0}] --> FAIL!"\
    "Folder"\
    "[${HEADER___PROJECT_DOC_FOLDER}]"\
    "remains on system!"

exit 1
