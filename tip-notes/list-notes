#set -o errexit
set -o nounset
set -o pipefail
#set -o xtrace


#-------------------------------------------------------------------------------
# CONFIGURATION SECTION
#-------------------------------------------------------------------------------
#

SCRIPT_NAME=$(basename "${0}")

LINK_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
LINKED_SCRIPT=$(readlink "${LINK_DIR}/${SCRIPT_NAME}")
if [[ -z "${LINKED_SCRIPT}" ]]; then
    EXECUTABLES_DIR="${LINK_DIR}"
else
    EXECUTABLES_DIR=$(dirname "${LINKED_SCRIPT}")
fi
# shellcheck source=./project-header.sh
source "${EXECUTABLES_DIR}/project-header.sh"



if [[ -f "${___HEADER___PROJECT_CONFIG_FILE___}" ]]; then
    # shellcheck source=/home/falcao/.config/tip-notes/tiprc
    source "${___HEADER___PROJECT_CONFIG_FILE___}"
else
    echo "ERROR: --> configuration file does not exist!"
    echo
    echo "To fix it type:"
    echo "tip --init"
    echo
    exit 1
fi

if [[ "${#}" -eq 0 ]]; then
    folder_to_list="${___CONFIG___TIP_NOTES_FOLDER}"
elif [[ "${#}" -eq 1 ]]; then
    folder_to_list="${___CONFIG___TIP_NOTES_FOLDER}/${1}"
    if ! [[ -d "${folder_to_list}" ]]; then
        echo "ERROR: [${1}] seems no to be a valid GROUP of notes"
        exit 1
    fi
else
    echo "ERROR: unexpected number os parameters"
    exit 1
fi

find "${folder_to_list}" -type f | sort | grep -oP "${folder_to_list}/\K.*"
